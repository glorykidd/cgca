@page "/parents"
@inject IJSRuntime JSRuntime

<PageTitle>CGCA Parents</PageTitle>

<div class="row">
  <div class="col-sm-12 col-md-6">
    <Card TextAlignment="Alignment.Start" Style="border: 0px; padding-top: 50px;">
      <CardBody>
        <CardTitle><i>Get to know us...</i></CardTitle>
        <CardText>
          <p style="text-align: justify;">Welcome to Cedar Grove Christian Academy (CGCA), a ministry of Cedar Grove
            Baptist Church. We are committed to academic excellence in a Christian environment. We feel honored that you
            have chosen our school to be your partner in the education of your children.</p>
          <div style="width: 80%; text-align: margin-top: 15px; border-radius: 25px;">
            <ul style=" text-indent: 25px; line-height: 1em;">
              <li>Prepared academically and spiritually</li>
              <li>Rooted in Christ</li>
              <li>Ready for tomorrow</li>
            </ul>
          </div>
        </CardText>
      </CardBody>
    </Card>
  </div>
  <div class="col-sm-12 col-md-6">
    <Image Src="images/parent.jpeg" style="border-radius: 50px;"></Image>
  </div>
</div>
<div class="row">
  <div class="col-12">
    <p>&nbsp;</p>
  </div>
</div>
<div class="row">
  <div class="col-12">
    <div
      style="width:100%; text-align: center; background-image: linear-gradient(to bottom, rgb(0, 123, 255), rgb(0, 255, 187)); border-bottom-left-radius: 50px; border-bottom-right-radius: 50px;  border-top-left-radius: 50px; border-top-right-radius: 50px; padding: 25px;">
      <p style="font-size: 2em; font-weight: bold;"> Things you need to know </p>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-12">
    <p>&nbsp;</p>
  </div>
</div>
<div class="row">
  <div class="col-sm-12 col-md-6 col-lg-4">
    <Card TextAlignment="Alignment.Center" Style="border: 0px;">
      <CardBody>
        <a href="/calendar">
          <Image Src="images/calendar.png"></Image>
        </a>
        <CardTitle>School Calendar</CardTitle>
      </CardBody>
    </Card>
  </div>
  <div class="col-sm-12 col-md-6 col-lg-4">
    <Card TextAlignment="Alignment.Center" Style="border: 0px;">
      <CardBody>
        <a @onclick="OnShowModalTuitionClick" style="cursor: pointer;">
          <Image Src="images/tuition.png"></Image>
        </a>
        <CardTitle>Tuition</CardTitle>
        <Modal @ref="tuition" Title="Tuition Details" Size="ModalSize.Large" IsVerticallyCentered="true">
          <BodyTemplate>
            <div
              style="width: 100%; text-align: left; border-left: 6px solid rgb(0, 79, 135); margin-top: 15px; border-radius: 25px;">
              <div style="width: 38%; float: left;">
                <p><b>Available Classes</b></p>
                <ul>
                  <li>Pre-School (K3)</li>
                  <li>Pre-School (K4/5)</li>
                </ul>
                <p><b>Before / After Care</b></p>
                <ul>
                  <li>Not currently available</li>
                </ul>
              </div>
              <div style="width: 58%; float: left;">
                <p><b>Weekly</b></p>
                <ul>
                  <li>Tuesday - Thursday</li>
                  <li>9:30 - 12:30 PM</li>
                  <li>Doors open at 9:15</li>
                </ul>
                <p><b>Basic Schedule</b></p>
                <ul>
                  <li>Will follow the same basic schedule as BCPS, please see the calendar for specific details.</li>
                </ul>
              </div>
              <div style="width: 98%; float: left;">
                <p><b>Tuition Costs (2026/27 school year)</b></p>
                <ul>
                  <li>Registration Total: $125 (Registration $75; Art Fee $50)</li>
                  <li>Tuition Total: $175 / month; or pay in advance and save 10%!</li>
                  <li>Discount of $10 off the monthly fee for each additional sibling</li>
                </ul>
              </div>
            </div>
          </BodyTemplate>
          <FooterTemplate>
            <Button Color="ButtonColor.Secondary" @onclick="OnHideModalTuitionClick">Close</Button>
          </FooterTemplate>
        </Modal>
      </CardBody>
    </Card>
  </div>
  <div class="col-sm-12 col-md-6 col-lg-4">
    <Card TextAlignment="Alignment.Center" Style="border: 0px;">
      <CardBody>
        <a href="https://tinyurl.com/25weonhg" target="_blank">
          <Image Src="images/parentportal.png"></Image>
        </a>
        <CardTitle>Parent Portal</CardTitle>
      </CardBody>
    </Card>
  </div>
</div>

@code {
  private Modal tuition = default!;
  private async Task OnHideModalTuitionClick()
  {
    await tuition.HideAsync();
  }
  private async Task OnShowModalTuitionClick()
  {
    await tuition.ShowAsync();
  }

}