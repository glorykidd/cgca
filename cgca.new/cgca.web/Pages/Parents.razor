@page "/parents"

<PageTitle>CGCA Parents</PageTitle>

<div class="row">
  <div class="col-sm-12 col-md-6">
    <Card TextAlignment="Alignment.Start" Style="border: 0px; padding-top: 50px;">
      <CardBody>
        <CardTitle><i>Get to know us...</i></CardTitle>
        <CardText>
          <p class="text-justify">Welcome to Cedar Grove Christian Academy (CGCA), a ministry of Cedar Grove
            Baptist Church. We are committed to academic excellence in a Christian environment. We feel honored that you
            have chosen our school to be your partner in the education of your children.</p>
          <div style="width: 80%; margin-top: 15px; border-radius: 25px;">
            <ul style="text-indent: 25px; line-height: 1em;">
              <li>Prepared academically and spiritually</li>
              <li>Rooted in Christ</li>
              <li>Ready for tomorrow</li>
            </ul>
          </div>
        </CardText>
      </CardBody>
    </Card>
  </div>
  <div class="col-sm-12 col-md-6">
    <img src="images/parent.jpeg" alt="Parents and students at CGCA" loading="lazy" class="img-fluid rounded-large" />
  </div>
</div>
<div class="row">
  <div class="col-12">
    <p>&nbsp;</p>
  </div>
</div>
<div class="row">
  <div class="col-12">
    <div class="section-header">
      <p class="section-header-title"> Things you need to know </p>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-12">
    <p>&nbsp;</p>
  </div>
</div>
<div class="row">
  <div class="col-sm-12 col-md-6 col-lg-4">
    <Card TextAlignment="Alignment.Center" Style="border: 0px;">
      <CardBody>
        <a href="/calendar">
          <img src="images/calendar.png" alt="School Calendar" loading="lazy" style="height: 100px; padding-bottom: 10px;" />
        </a>
        <CardTitle>School Calendar</CardTitle>
      </CardBody>
    </Card>
  </div>
  <div class="col-sm-12 col-md-6 col-lg-4">
    <Card TextAlignment="Alignment.Center" Style="border: 0px;">
      <CardBody>
        <a @onclick="@(() => tuition.ShowAsync())" style="cursor: pointer;">
          <img src="images/tuition.png" alt="Tuition Details" loading="lazy" style="height: 100px; padding-bottom: 10px;" />
        </a>
        <CardTitle>Tuition</CardTitle>
        <Modal @ref="tuition" Title="Tuition Details" Size="ModalSize.Large" IsVerticallyCentered="true">
          <BodyTemplate>
            <div class="modal-sidebar">
              <div style="width: 38%; float: left;">
                <p><b>Available Classes</b></p>
                <ul>
                  <li>Pre-School (K3)</li>
                  <li>Pre-School (K4/5)</li>
                </ul>
                <p><b>Before / After Care</b></p>
                <ul>
                  <li>Not currently available</li>
                </ul>
              </div>
              <div style="width: 58%; float: left;">
                <p><b>Weekly</b></p>
                <ul>
                  <li>Tuesday - Thursday</li>
                  <li>9:30 - 12:30 PM</li>
                  <li>Doors open at 9:15</li>
                </ul>
                <p><b>Basic Schedule</b></p>
                <ul>
                  <li>Will follow the same basic schedule as BCPS, please see the calendar for specific details.</li>
                </ul>
              </div>
              <div style="width: 98%; float: left;">
                <p><b>Tuition Costs (2026/27 school year)</b></p>
                <ul>
                  <li>Registration Total: $125 (Registration $75; Art Fee $50)</li>
                  <li>Tuition Total: $175 / month; or pay in advance and save 10%!</li>
                  <li>Discount of $10 off the monthly fee for each additional sibling</li>
                </ul>
              </div>
            </div>
          </BodyTemplate>
          <FooterTemplate>
            <Button Color="ButtonColor.Secondary" @onclick="@(() => tuition.HideAsync())">Close</Button>
          </FooterTemplate>
        </Modal>
      </CardBody>
    </Card>
  </div>
  <div class="col-sm-12 col-md-6 col-lg-4">
    <Card TextAlignment="Alignment.Center" Style="border: 0px;">
      <CardBody>
        <a href="https://app.praxischool.com/parent_login.php?s=4101" target="_blank" rel="noopener noreferrer">
          <img src="images/parentportal.png" alt="Parent Portal" loading="lazy" style="height: 100px; padding-bottom: 10px;" />
        </a>
        <CardTitle>Parent Portal</CardTitle>
      </CardBody>
    </Card>
  </div>
</div>

@code {
  private Modal tuition = null!;
}
